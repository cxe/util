#!/usr/bin/env bash

# #usage   is function util && echo $_
is() {
    case "$1" in
        array) [[ "$(declare -p "$2" 2>/dev/null)" =~ "declare -a" ]];;
        associative) [[ "$(declare -p "$2" 2>/dev/null)" =~ "declare -A" ]];;
        block) [[ -b "$2" ]];;
        bool) is truthy "$2" || is falsy "$2" ;;
        char) [[ -c "$2" ]];;
        defined) [[ "${2+x}" ]];;
        dir) [[ -d "$2" ]];;
        empty) [[ ! -s "$2" ]];;
        exec) [[ -x "$2" ]];;
        falsy)
            local v="${2,,}"
            [[ -z "$v" || "$v" == false || "$v" == 0 || "$v" == no || "$v" == off ]]
            ;;
        file) [[ -f "$2" ]];;
        function) [[ $(type -t "$2") == function ]];;
        integer) [[ "$2" =~ ^-?[0-9]+$ ]];;
        number) [[ "$2" =~ ^[-+]?[0-9]*\.?[0-9]+$ ]];;
        readable) [[ -r "$2" ]];;
        socket) [[ -S "$2" ]];;
        symlink) [[ -L "$2" ]];;
        truthy)
            if [[ "$2" =~ ^[-+]?[0-9]*\.?[0-9]+$ ]]; then
                (( $2 != 0 ))
            else
                local v="${2,,}"
                [[ "$v" == true || "$v" == yes || "$v" == on ]]
            fi
            ;;
        url) [[ "$2" =~ ^(https?|mailto|ftps?)://[a-zA-Z0-9._~:/?#\[\]@!$&'()*+,;=%-]+$ ]];;
        variable) [[ -v "$2" ]];;
        writable) [[ -w "$2" ]];;
        *) return 1;;
    esac
}
