root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

[*.{js,jsx,ts,tsx,mjs,cjs}]
quote_type = single

[*.{json,html,htm,css,scss,less}]
indent_size = 2
max_line_length = off

[*.{yml,yaml}]
indent_size = 2
max_line_length = off

[*.{md,markdown,mdx,diff,patch}]
max_line_length = off
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{cmd,bat,ps1}]
end_of_line = crlf

[*.{xml,svg}]
max_line_length = off

[*.{txt,log,ini}]
indent_size = 2
max_line_length = off

[*.{sh,bat,command}]
max_line_length = off

[*.{ini,py,py.tpl,rst}]
indent_size = 4
max_line_length = off

[*.{java,kt,rs}]
max_line_length = 120

[*.go]
indent_style = tab
indent_size = 4
